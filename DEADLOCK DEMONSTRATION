public class DeadlockDemo {
    static final Object A=new Object(), B=new Object();
    public static void main(String[] args){
        new Thread(()->{ synchronized(A){ try{Thread.sleep(100);}catch(Exception e){} synchronized(B){ System.out.println("Thread1 done"); } } }).start();
        new Thread(()->{ synchronized(B){ try{Thread.sleep(100);}catch(Exception e){} synchronized(A){ System.out.println("Thread2 done"); } } }).start();
    }
}
